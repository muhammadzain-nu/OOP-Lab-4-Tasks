class Programmer {
    int id;
    String name;
    String preferredLanguage;
    int problemsSolved;

    Programmer(int id, String name, String preferredLanguage, int problemsSolved) {
        this.id = id;
        this.name = name;
        this.preferredLanguage = preferredLanguage;
        this.problemsSolved = problemsSolved;
    }

    void updateSolvedProblems(int additionalProblems) {
        problemsSolved += additionalProblems;
    }

    void displayDetails() {
        System.out.println("Programmer ID: " + id);
        System.out.println("Name: " + name);
        System.out.println("Preferred Language: " + preferredLanguage);
        System.out.println("Problems Solved: " + problemsSolved);
        System.out.println("-------------------------");
    }

    public static void main(String[] args) {
        Programmer p1 = new Programmer(1, "Alice", "Java", 50);
        Programmer p2 = new Programmer(2, "Bob", "Python", 75);

        p1.displayDetails();
        p2.displayDetails();

        // Update solved problems
        p1.updateSolvedProblems(10);
        p2.updateSolvedProblems(5);

        System.out.println("After Updating Problems Solved:");
        p1.displayDetails();
        p2.displayDetails();
    }
}
